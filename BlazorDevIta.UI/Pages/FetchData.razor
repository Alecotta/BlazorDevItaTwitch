@page "/fetchdata"
@inject IDataServices DataServices

<PageTitle>Weather forecast</PageTitle>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    @if(currentForecast == null)
    {
        <Grid Forecasts="forecasts" OnEdit="Edit" OnDelete="Delete" OnCreate="Create" />
    }
    else
    {
        <Details CurrentItem="currentForecast" OnCancel="Cancel" OnSave="Save" />
    }
}

@code {
    private List<WeatherForecastListItem?>? forecasts;
    private WeatherForecastDetails? currentForecast = null;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await DataServices.GetWeatherForecastsAsync();
    }

    private async Task Edit(WeatherForecastListItem forecast)
    {
        currentForecast = await DataServices.GetWeatherForecastByIdAsync(forecast.Id);
    }

    private void Delete(WeatherForecastListItem forecast)
    {
        /*if (forecast == currentForecast)
        {
            currentForecast = null;
        }*/
        forecasts?.Remove(forecast);
    }

    private void Cancel()
    {
        currentForecast = null;
    }

    private void Save(WeatherForecastDetails forecast)
    {
        //forecasts?.Add(forecast);
        currentForecast = null;
    }

    private void Create()
    {
        currentForecast = new();
    }
}
